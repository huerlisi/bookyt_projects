= semantic_form_for @activity do |f|
  = f.inputs do
    = f.input :project, :as => :combobox
    = f.input :person, :as => :combobox
  = f.inputs do
    = f.input :when, :as => :date_field, :required => true
    = f.input :from, :as => :hour_field
    = f.input :to, :as => :hour_field
    = f.input :hours
    = f.input :minutes
  = f.inputs do
    = f.input :comment
  = f.buttons do
    = f.commit_button